<div class="row form">
  <div class="col-lg-12">
    <%= form__for current_user do |f| %>
    <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :family_name, placefolder: "姓", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :first_name, placefolder: "名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :first_name_kana, placefolder: "セイ", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :first_name_kana, placefolder: "メイ", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
          <%= f.submit '送信', class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>